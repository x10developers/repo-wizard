// Improved Prisma Schema with better tracking and constraints

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model users {
  id           String         @id
  username     String
  type         String         // user | organization
  created_at   DateTime?      @default(now()) @db.Timestamp(6)
  repositories repositories[]
}

model repositories {
  id              String          @id
  full_name       String          @unique
  owner_id        String
  is_active       Boolean?        @default(true)
  installation_id BigInt?         // Track which installation owns this
  created_at      DateTime?       @default(now()) @db.Timestamp(6)
  updated_at      DateTime?       @default(now()) @updatedAt @db.Timestamp(6)
  deleted_at      DateTime?       @db.Timestamp(6)
  
  // Relations
  ai_usage        ai_usage[]
  reminders       reminders[]
  repo_features   repo_features[]
  users           users           @relation(fields: [owner_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  
  @@index([owner_id], map: "idx_repositories_owner")
  @@index([is_active], map: "idx_repositories_active")
}

model reminders {
  id            String       @id
  repo_id       String
  issue_number  Int
  message       String?
  scheduled_at  DateTime     @db.Timestamp(6)
  status        String?      @default("pending") // pending | processing | sent | failed | dead | canceled
  retry_count   Int?         @default(0)
  error         String?
  sent_at       DateTime?    @db.Timestamp(6)
  created_at    DateTime?    @default(now()) @db.Timestamp(6)
  updated_at    DateTime?    @default(now()) @updatedAt @db.Timestamp(6)
  created_by    String?      // GitHub username who created this
  last_retry_at DateTime?    @db.Timestamp(6)
  
  // Relations
  repositories  repositories @relation(fields: [repo_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([scheduled_at], map: "idx_reminders_schedule")
  @@index([status], map: "idx_reminders_status")
  @@index([repo_id, issue_number], map: "idx_reminders_repo_issue")
  @@index([created_at], map: "idx_reminders_created")
  @@index([created_by], map: "idx_reminders_user")
  @@index([status, scheduled_at, retry_count], map: "idx_reminders_scheduler")
}

model ai_usage {
  id           Int          @id @default(autoincrement())
  repo_id      String
  month        DateTime     @db.Date
  used         Int?         @default(0)
  limit_value  Int?         @default(200)
  created_at   DateTime?    @default(now()) @db.Timestamp(6)
  repositories repositories @relation(fields: [repo_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([repo_id, month])
  @@index([month], map: "idx_ai_usage_month")
}

model audit_logs {
  id         Int       @id @default(autoincrement())
  repo_id    String?
  action     String
  meta       Json?
  created_at DateTime? @default(now()) @db.Timestamp(6)
  
  @@index([repo_id], map: "idx_audit_logs_repo")
  @@index([created_at], map: "idx_audit_logs_created")
}

model features {
  key           String          @id
  description   String
  repo_features repo_features[]
}

model repo_features {
  repo_id      String
  feature_key  String
  enabled      Boolean?     @default(true)
  features     features     @relation(fields: [feature_key], references: [key], onDelete: Cascade, onUpdate: NoAction)
  repositories repositories @relation(fields: [repo_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@id([repo_id, feature_key])
}